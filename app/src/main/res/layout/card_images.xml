<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    card_view:cardCornerRadius="0dp"
    >

    <!--   Recycler View Item Row   -->
    <LinearLayout
        android:id="@+id/propertyCard"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="220dp" >

            <ImageView
                android:id="@+id/propertyImage"
                android:layout_width="fill_parent"
                android:layout_height="220dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:background="#ececec"
                />

            <TextView
                android:id="@+id/videoTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 min"
                android:visibility="visible"
                android:textColor="#FFF"
                android:layout_alignParentBottom="true"
                android:padding="7dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:gravity="end|left" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="4dp">
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="CIRCULAR MOTION"
                android:textColor="#313030"
                android:background="#fff"
                android:textSize="20dp"
                android:layout_marginLeft="10dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/profName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="by Prof.Shiv Moorthy"
                    android:textColor="#000"
                    android:background="#fff"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    />
            </LinearLayout>


        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:id="@+id/propertyOwnerLayout">
            <LinearLayout
                android:id="@+id/thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dip"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="10dip">

                <ImageView android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_action_name"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/Rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="80dp">

                <TextView
                    android:id="@+id/ownerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aakash Institute"
                    android:textColor="#252323"
                    android:typeface="sans"
                    android:textSize="19dip"
                    android:gravity="center" />
                <TextView
                    android:id="@+id/ownerType"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#565656"
                    android:layout_marginTop="25dp"
                    android:textSize="16dip"
                    android:text="46536 views" />
            </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>